{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest"],
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["apps/**/*.ts", "memory-bank/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
